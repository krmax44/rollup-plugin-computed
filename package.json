{
  "name": "rollup-plugin-computed",
  "version": "0.0.0",
  "keywords": [
    "rollup-plugin",
    "vite-plugin"
  ],
  "description": "Compute data during build time. ",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "github:krmax44/rollup-plugin-computed",
  "author": "krmax44<hi@krmax44.de>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:types": "tsc --noEmit",
    "lint": "eslint --ignore-path .gitignore .",
    "check-all": "yarn lint && yarn test && yarn test:types",
    "dev": "yarn build --watch",
    "build": "tsup ./src/index.ts --dts --format esm,cjs",
    "prepublishOnly": "yarn build",
    "prepare": "husky install",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.20",
    "@types/mime-types": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rollup": "^2.45.2",
    "ts-jest": "^26.5.5",
    "tsup": "^4.9.2",
    "typescript": "^4.2.4",
    "vite": "^2.2.3",
    "vitepress": "^0.13.2"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": "*.config.js",
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "capitalized-comments": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test --clear-cache && yarn test"
    }
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version}\n\n[skip ci]"
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "mime-types": "^2.1.30"
  }
}